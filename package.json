{
  "name": "git-ritual",
  "type": "module",
  "version": "0.1.3",
  "packageManager": "pnpm@10.11.0",
  "description": "交互式 CLI 工具，自定义 Git 批量操作流程。",
  "license": "MIT",
  "homepage": "https://github.com/RuSenLi/git-ritual",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RuSenLi/git-ritual.git"
  },
  "bugs": {
    "url": "https://github.com/RuSenLi/git-ritual/issues"
  },
  "keywords": [
    "git",
    "gitflow",
    "workflow",
    "automation",
    "cli",
    "git-ritual",
    "cherry-pick",
    "branch",
    "push"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "bin": {
    "gr": "bin/gitritual.mjs",
    "git-ritual": "bin/gitritual.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown -w",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/cli/run.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "ansis": "^4.1.0",
    "boxen": "^8.0.1",
    "execa": "^9.6.0",
    "simple-git": "^3.28.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.15.21",
    "bumpp": "^10.1.1",
    "eslint": "^9.27.0",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.10",
    "tsdown": "^0.12.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
